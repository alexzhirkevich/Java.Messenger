<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_message_outcoming">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_sender"
            android:layout_marginTop="-1dp"
            android:background="@android:color/transparent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"

            android:paddingTop="10dp"
            android:text="This is multiline text\nmessage"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_text"
            android:layout_alignEnd="@+id/message_text"
            android:layout_alignRight="@+id/message_text"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="13:37"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:paddingEnd="15dp" />

</RelativeLayout>