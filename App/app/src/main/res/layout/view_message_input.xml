<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="@dimen/message_input_height"
        android:layout_height="@dimen/message_input_height"
        android:layout_marginStart="5dp" >
    <ProgressBar
        android:id="@+id/input_attach_progress"
        android:layout_width="@dimen/message_input_height"
        android:layout_height="@dimen/message_input_height"
        android:indeterminateDrawable="@drawable/progressbar"
        android:visibility="invisible"/>
    <ImageButton
        android:id="@+id/button_message_attach"
        android:background="@android:color/transparent"
        android:layout_width="@dimen/message_input_height"
        android:layout_height="@dimen/message_input_height"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_attach"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="1dp"/>
    </FrameLayout>


    <EditText
        android:id="@+id/edit_message_input"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:hint="@string/title_message"
        android:gravity="bottom"
        android:paddingBottom="10dp"
        android:inputType="textMultiLine|textCapSentences"
        android:maxLines="4"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:scrollbars="vertical"
        android:textSize="@dimen/message_input_text_size" />

    <ImageButton
        android:id="@+id/button_message_send"
        android:layout_width="@dimen/message_input_height"
        android:layout_height="@dimen/message_input_height"
        android:layout_gravity="bottom"
        android:layout_marginEnd="5dp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_send"
        android:tint="?attr/colorPrimary" />


</LinearLayout>