<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/chat_message_space">

    <com.messenger.app.ui.AvatarImageView
        android:id="@+id/message_avatar"
        android:padding="1dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="5dp"
        android:src="@drawable/drawable_circle"/>

    <RelativeLayout
        android:id="@+id/message_data_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/drawable_message_incoming_group"
        android:layout_toEndOf="@id/message_avatar">

        <TextView
            android:id="@+id/message_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Message Sender"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/message_sender_size" />

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_sender"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:autoLink="web|phone|email"
            android:linksClickable="true"
            android:contextClickable="true"
            android:clickable="true"
            android:longClickable="true"
            android:text="This is multiline text\nmessage"
            android:textColor="@color/white"
            android:textSize="@dimen/message_text_size" />

        <TextView
            android:id="@+id/message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_text"
            android:layout_marginBottom="5dp"
            android:layout_alignStart="@id/message_text"
            android:background="@android:color/transparent"
            android:inputType="time"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="13:37"
            android:textColor="@color/gray"
            android:textSize="@dimen/message_date_size" />

    </RelativeLayout>


</RelativeLayout>